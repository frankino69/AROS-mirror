OBJS :=		$(STARTUP) $(C_OBJS)

LIBS :=		-L. -lnix -lgcc -lamiga -lglue

###############################################################################

all:		libglue.a term

term:		$(OBJS)
		gcc $(CFLAGS) -o $@ $(OBJS) $(LIBS)

###############################################################################

glue/glue.lib:	glue
		cd glue; $(MAKE)

libglue.a:	glue/glue.lib
		hunk2gcc glue/glue.lib
		ar qc $@ obj.#?
		ranlib $@
		@-delete >nil: obj.#?

###############################################################################

clean:
		delete quiet $(OBJS) libglue.a term
