.SUFFIXES: .c .o .asm .a

###############################################################################
#
#	Converts the AmigaDOS hunk format object for GCC compatibility.
#
###############################################################################

define hunk2gcc
hunk2gcc >nil: $*.o; \
delete >nil: $*.o; \
join >nil: obj.#? as $*.o; \
delete >nil: obj.#?;
endef

###############################################################################

.c.o:
	gcc -c $(CFLAGS) $<

.asm.o:
	a68k $(AFLAGS) $*.asm
	@$(hunk2gcc)

###############################################################################

AFLAGS :=	-q -dCPU_030 -dCPU='030' -iinclude:
CFLAGS :=	-DINCLUDEALL -DCPU_68030 -m68030 -noixemul -nostdlib -nostartfiles

