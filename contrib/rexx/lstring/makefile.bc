#		*Compiler Configuration File*

!if $d(__DEBUG__)

### DEBUG version

lstring.cfg: makefile.bc
  copy &&|
-P-c
-3
-ml
-R
-v
-y
-vi-
-weas
-wpre
-H=lstring.sym
-I$(INCPATH)
-L$(LIBPATH)
-DMSDOS=1;__DEBUG__=1;__GREEK__
| lstring.cfg

!else

### Optimised version ###

!if $d(__8086__)
## Create a 8086 version
lstring.cfg: makefile.bc
  copy &&|
-P-c
-1-
-a-
-d
-G-
-ml
-vi-
-weas
-wpre
-H=lstring.sym
-I$(INCPATH)
-L$(LIBPATH)
-DMSDOS=1;__GREEK__
| lstring.cfg

!else

# If we want to use the FPU
#-f287
#-ff

lstring.cfg: makefile.bc
  copy &&|
-P-c
-3
-a
-d
-h
-G
-Z
-O2
-ml
-vi-
-weas
-wpre
-H=lstring.sym
-I$(INCPATH)
-L$(LIBPATH)
-DMSDOS=1;__GREEK__
| lstring.cfg
!endif

!endif

