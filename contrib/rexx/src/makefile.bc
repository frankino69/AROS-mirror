.AUTODEPEND

#		*Translator Definitions*
CC = bcc +REXX.CFG
ASM = tasm
TLIB = tlib
TLINK = tlink
STRIP = f:\debug\tdstrip
LIBPATH = F:\BC\LIB;C:\USR\LIB;LIB
INCPATH = F:\BC\INC;..\INC

# .path.obj = OBJ\

#		*Implicit Rules*
.c.obj:
  $(CC) -c {$< }

.cpp.obj:
  $(CC) -c {$< }

.cc.obj:
  $(CC) -c {$< }

.a.obj:
  $(TASM) /ml $<

#		*List Macros*


OBJS =  \
 main.obj \
 rexx.obj \
 compile.obj \
 template.obj \
 expr.obj \
 interpre.obj \
 nextsymb.obj \
 rexxfunc.obj \
 builtin.obj \
 rxstr.obj \
 rxword.obj \
 rxconv.obj \
 rxfiles.obj \
 rxmath.obj \
 address.obj \
 variable.obj \
 trace.obj \
 error.obj \
 stack.obj \
 dqueue.obj \
 bintree.obj \
 bmem.obj \
 systemx.obj \
 spawnx.obj \
 int2e.obj 

#		*Explicit Rules*
..\bin\rexx.exe: rexx.cfg $(OBJS)
  $(TLINK) /v/x/c/P-/Vt/L$(LIBPATH) @&&|
c0l.obj+
main.obj+
rexx.obj+
compile.obj+
template.obj+
expr.obj+
interpre.obj+
nextsymb.obj+
rexxfunc.obj+
builtin.obj+
rxstr.obj+
rxword.obj+
rxconv.obj+
rxfiles.obj+
rxmath.obj+
address.obj+
variable.obj+
trace.obj+
error.obj+
stack.obj+
bintree.obj+
dqueue.obj+
bmem.obj+
systemx.obj+
spawnx.obj+
int2e.obj
..\bin\rexx
		# no map file
..\lib\lstr.lib+
fp87.lib+
mathl.lib+
cl.lib
|
#(STRIP) %@

clean:
	del rexx.exe obj\*.obj *.sym

# ****** Individual file dependencies ******
int2e.obj: int2e.a
	$(ASM) /ml int2e.a

spawnx.obj: spawnx.a
	$(ASM) /ml spawnx.a

